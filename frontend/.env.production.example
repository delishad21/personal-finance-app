# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database
POSTGRES_USER=financeuser
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=personal_finance
POSTGRES_PORT=5432

# App
APP_PORT=3000

# Parser Service
PARSER_PORT=4000
FRONTEND_URL=http://your-server-ip:3000

# Auth.js (Generate a secure random string for NEXTAUTH_SECRET)
# You can generate one with: openssl rand -base64 32
NEXTAUTH_URL=http://your-server-ip:3000
NEXTAUTH_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING_MIN_32_CHARS

# Database URL (used by Prisma)
DATABASE_URL=postgresql://financeuser:CHANGE_THIS_PASSWORD@postgres:5432/personal_finance?schema=public

# Parser Service URL (internal Docker network)
PARSER_SERVICE_URL=http://file-parser:4000
